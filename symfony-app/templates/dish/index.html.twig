{% extends 'base.html.twig' %}

{% block title %}Our Menu{% endblock %}

{% block body %}
<div class= "container">
<br>
  <h2>Dishes</h2><br>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Dish Name</th>
        <th scope="col">Description</th>     
      </tr>
    </thead>
    <tbody>    
        {% for dish in dishes %}
          <tr>
              <td>{{dish.id}}</td>
              <td>{{dish.name}}</td>
              <td>{{dish.description}}</td>
          </tr>
        {% endfor %}        
    </tbody>
  </table>
</div>
{% endblock %}
